<div id="sliderContainer">

<tal:slider condition="context/images">
    <div id="featured" style="width:740px;height:363px;">
        <tal:block repeat="image context/images">
            <tal:block tal:define="imgid string:${repeat/image/number}">

                <a tal:condition="image/url"
                   tal:attributes="href image/url">
                    <img tal:attributes="src string:${context/url}/images/${repeat/image/number}/++attribute++image;
                                         alt image/title" />
                </a>

                <img tal:condition="not: image/url"
                     tal:attributes="src string:${context/url}/images/${repeat/image/number}/++attribute++image;
                                     alt image/title" />

            </tal:block>
        </tal:block>
    </div>

    <script type="text/javascript">
        $(function () {
            $('#featured').orbit({
                animation: 'fade',
                pauseOnHover: true,
                directionalNav: false,
                startClockOnMouseOut: true,
                startClockOnMouseOutAfter: 1,
                bullets: true
            });
        });
    </script>
</tal:slider>

<tal:noslider condition="not: context/images">
    There are no images in the slider.
</tal:noslider>

</div>